{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "rootDirs": ["."],
    "moduleResolution": "Node",
    "noUnusedLocals": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
